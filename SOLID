"""1.1"""
class CallReport:
    def report_Processing(self):
        print("формування репорту")

class ReportSave:
    def savereport(self):
        print("зберігання репорту")

call = CallReport()
save = ReportSave()
call.report_Processing()
save.savereport()
"""1.2"""
class subscriber:
    def subscribe(self):
        print("зберігання даних абонента")

class SMSsender:
    def send(self):
        print("надіслання SMS")

class balance:
    def check(self):
        print("перевірка балансу")

person = subscriber()
sms = SMSsender()
card = balance()
person.subscribe()
sms.send()
card.check()
"""2.1"""
class Tariff:
    def price(self, minutes):
        return 0

class Basic(Tariff):
    def price(self, minutes):
        return minutes * 1

class New(Tariff):
    def price(self, minutes):
        return minutes * 1.2
"""2.2"""
class Tariff:
    def price(self, minutes):
        return 0

class VoiceTariff(Tariff):
    def voice(self):
        print("підтримка голосових повідомлень")
    def price(self, minutes):
        return minutes * 0.5

class DataTariff(Tariff):
    def data(self):
        print("підтримка контролю трафіку")
    def price(self, minutes):
        return minutes * 0.8

class RoamingTariff(Tariff):
    def price(self,minutes):
        return minutes * 1
"""3.1"""
class NetworkConnection:
    def connect(self):
        print("Підключення до мережі")

class WiFiConnection(NetworkConnection):
    def connect(self):
        print("WiFi підключено")

class LTEConnection(NetworkConnection):
    def connect(self):
        print("LTE підключено")
"""3.2"""
class NetworkConnection:
    def connect(self):
        pass

class HighSpeedConnection(NetworkConnection):
    def transfer_data(self, data: str):
        print(f"Швидка передача: {data}")

class SatelliteConnection(NetworkConnection):
    def connect(self):
        print("Пошук супутника на орбіті... Сигнал знайдено.")
    def transfer_via_satellite(self, data: str):
        print(f"Надсилання пакету через космос: {data}")
