"""4.2"""
from abc import ABC, abstractmethod
class IDataTransmitter(ABC):
    @abstractmethod
    def send_data(self, data: bytes):
        pass

class IDeviceManagement(ABC):
    @abstractmethod
    def update_firmware(self, version: str):
        pass

    @abstractmethod
    def reboot(self):
        pass
"""5.1"""
class Logger:
    def log(self, message): ...

class FileLogger(Logger):
    def log(self, message):
        print("Файл:", message)

class NetworkMonitor:
    def __init__(self, logger: Logger):
        self.logger = logger

    def check(self):
        self.logger.log("Мережа працює")
"""5.2"""
from abc import ABC, abstractmethod

class Logger(ABC):
    @abstractmethod
    def log(self, message):
        pass

class FileLogger(Logger):
    def log(self, message):
        print("Файл:", message)

class ServerLogger(Logger):
    def log(self, message):
        print("Сервер:", message)

class ConsoleLogger(Logger):
    def log(self, message):
        print("Консоль:", message)

class NetworkMonitor:
    def __init__(self, logger: Logger):
        self.logger = logger

    def check(self):
        self.logger.log("Мережа працює")

monitor1 = NetworkMonitor(FileLogger())
monitor1.check()

monitor2 = NetworkMonitor(ServerLogger())
monitor2.check()

monitor3 = NetworkMonitor(ConsoleLogger())
monitor3.check()
